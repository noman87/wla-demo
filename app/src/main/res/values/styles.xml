<resources>

    <!-- Base application theme. -->

    <style name="Base.Theme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="app_colorPrimary">@color/colorPrimary</item>
        <item name="app_colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="app_colorAccent">@color/colorAccent</item>
        <item name="app_background">@drawable/dashboard</item>

        <item name="connectButtonBgColor">@color/colorDisconnected</item>
        <item name="connectingButtonBgColor">@color/colorConnecting</item>
        <item name="connectedButtonBgColor">@color/colorConnected</item>


    </style>


    <style name="Base.Theme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="app_colorPrimary">@color/colorPrimary</item>
        <item name="app_colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="app_colorAccent">@color/colorAccent</item>
        <item name="app_background">@drawable/dashboard</item>

    </style>

</resources>
